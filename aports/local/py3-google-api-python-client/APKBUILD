# Contributor: Keith Maxwell <keith.maxwell@gmail.com>
# Maintainer: Keith Maxwell <keith.maxwell@gmail.com>
pkgname=py3-google-api-python-client
_pkgname="${pkgname#py3-}"
pkgver=1.6.5
pkgrel=0
pkgdesc="The Google API Client for Python"
url="https://github.com/google/google-api-python-client"
arch="noarch"
license="Apache-2.0"
depends="python3 py3-httplib2 py3-uritemplate py3-six py3-oauth2client"
makedepends="python3"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
options="!check"  # tests are not included in the .tar.gz

builddir="$srcdir/$_pkgname-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="ecf4e38ed92e25086fd1eec0e9dd35d77bd93a41519555e98887ae869179516d8062546f51b966a6b40e66a45ed86239a7c214bc7ec8286de7c7822a47544c68  google-api-python-client-1.6.5.tar.gz"
